@model List<BusinessProject.Models.EmpleadoML>

@{
    ViewBag.Title = "Empleado";
}

<div class="col-lg-12 col-md-12 col-xl-12">
    <table id="tbl" class="table table-striped table-bordered table-condensed table-responsive-sm">

        <thead>
            <tr>
                <th>@Html.LabelFor(p=>Model[0].IdEmpleado)</th>
                <th>@Html.LabelFor(p=>Model[0].NombreEmpledo)</th>
                <th>@Html.LabelFor(p=>Model[0].ApPaternoEmpleado)</th>
                <th>@Html.LabelFor(p=>Model[0].ApMAternoEmpleado)</th>
                <th>@Html.LabelFor(p=>Model[0].FechaContratoEmpleado)</th>
                <th>@Html.LabelFor(p=>Model[0].TipoContratoNombre)</th>
            </tr>
        </thead>

        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.IdEmpleado</td>
                    <td>@item.NombreEmpledo</td>
                    <td>@item.ApPaternoEmpleado</td>
                    <td>@item.ApMAternoEmpleado</td>
                    <td>@item.FechaContratoEmpleado</td>
                    <td>@item.TipoContratoNombre</td>
                </tr>
            }
        </tbody>

    </table>
</div>