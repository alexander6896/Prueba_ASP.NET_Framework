<!-- Traemos mi ML, que es mi modelo que me sirve como base para mostrar en la pagina-->
@model List<BusinessProject.Models.TableExampleML>

@{
    ViewBag.Title = "TableExample";
}

<div class="col-lg-12 col-md-12 col-xl-12">
    <!-- Diseño establecido Tabla -->
    <table id="tbl" class="table table-striped table-bordered table-condensed table-responsive-sm">

        <!--Encabezado de la tabla-->
        <thead>
            <tr>
                <th>@Html.LabelFor(p => Model[0].IIDUsuario)</th>
                <th>@Html.LabelFor(p => Model[0].NombreUsuerio)</th>
                <th>@Html.LabelFor(p => Model[0].TipoUsuario)</th>
                <th>@Html.LabelFor(p => Model[0].IIDRol)</th>
                <th>@Html.LabelFor(p => Model[0].Rol_Nombre)</th>
            </tr>
        </thead>

        <!-- Cuerpo de la Table-->
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IIDUsuario</td>
                    <td>@item.NombreUsuerio</td>
                    <td>@item.TipoUsuario</td>
                    <td>@item.IIDRol</td>
                    <td>@item.Rol_Nombre</td>
                </tr>
            }
        </tbody>

    </table>
</div>